<VBox fx:id="mainVBox" fillWidth="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1077.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cronapp.cronnewsparserapp.controller.NewsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
