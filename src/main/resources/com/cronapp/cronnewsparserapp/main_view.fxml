      </cursor>
      <VBox.margin>
         <Insets bottom="1.0" left="472.0" top="-5.0" />
      </VBox.margin>
   </DatePicker>
    <ImageView fx:id="loadingGif" fitHeight="43.0" fitWidth="55.0" visible="false">
