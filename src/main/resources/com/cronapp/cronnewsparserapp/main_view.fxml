            <Font size="25.0" />
         </font></Label>
      <VBox.margin>
         <Insets left="326.0" top="-250.0" />
      </VBox.margin>
      <padding>
         <Insets left="16.0" right="5.0" />
      </padding>
    </HBox>

    <TextArea fx:id="newsContentArea" editable="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="241.0" prefWidth="440.0">
        <VBox.margin>
            <Insets left="591.0" top="-260.0" />
        </VBox.margin></TextArea>
   <Hyperlink fx:id="postUrlLink" prefHeight="25.0" prefWidth="707.0" textFill="#0070f8">
      <VBox.margin>
         <Insets bottom="5.0" left="320.0" top="5.0" />
      </VBox.margin>
      <font>
         <Font size="13.0" />
      </font></Hyperlink>

    <Label minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="80.0" text="Post link: " textAlignment="CENTER" textFill="#0d0d0d" wrapText="true">
