         </HBox.margin></Button>
      <padding>
         <Insets left="55.0" right="40.0" />
      </padding>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <ImageView fx:id="newsImageView" fitHeight="242.0" fitWidth="290.0" preserveRatio="true">
      <VBox.margin>
         <Insets left="4.0" top="-4.0" />
