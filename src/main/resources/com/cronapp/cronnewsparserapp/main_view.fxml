         </HBox.margin>
         <VBox.margin>
            <Insets left="0.0" top="0.0" />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font></Label>
        <Label fx:id="publishedDateLbl" minHeight="-Infinity" minWidth="-Infinity" prefHeight="61.0" prefWidth="249.0" text="-" wrapText="true">
         <HBox.margin>
            <Insets left="-162.0" top="163.0" />
         </HBox.margin>
         <VBox.margin>
            <Insets bottom="100.0" left="-54.0" top="-343.0" />
         </VBox.margin>
