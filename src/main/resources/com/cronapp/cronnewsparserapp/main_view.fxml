            <Insets left="-16.0" top="7.0" />
         </HBox.margin>
         <font>
            <Font name="System Bold" size="19.0" />
         </font></Label>
        <Label fx:id="categoryLbl" minHeight="-Infinity" minWidth="-Infinity" prefHeight="63.0" prefWidth="251.0" text="-" textFill="#d72f2f" wrapText="true">
